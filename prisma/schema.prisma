datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(EMPLOYEE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  departments        Department[]  @relation("UserDepartments")
  projects           Project[]     @relation("UserProjects")
  tasks              Task[]        @relation("UserTasks")
  activityLogs       ActivityLog[] @relation("performedByUser")
  employeeOf         Department[]  @relation("DepartmentEmployees") // departments where user is employee
  activityLogsAsUser ActivityLog[] @relation(fields: [], references: [])

  @@index([email])
}

model Department {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy   User   @relation("UserDepartments", fields: [createdById], references: [id])
  createdById String

  projects Project[] @relation("DepartmentProjects")

  employees User[] @relation("DepartmentEmployees") // users who are employees of this department

  employeesList Employee[] // opposite relation for Employee.department
}

model Project {
  id          String        @id @default(uuid())
  name        String
  description String?
  startDate   DateTime
  endDate     DateTime?
  status      ProjectStatus @default(PLANNED)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  departments Department[] @relation("DepartmentProjects")
  createdBy   User         @relation("UserProjects", fields: [createdById], references: [id])
  createdById String

  tasks        Task[]
  activityLogs ActivityLog[]
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      TaskStatus @default(TODO)
  dueDate     DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  project   Project @relation(fields: [projectId], references: [id])
  projectId String

  assignedTo   User?         @relation("UserTasks", fields: [assignedToId], references: [id])
  assignedToId String?
  activityLogs ActivityLog[]

  employee   Employee? @relation("EmployeeTasks", fields: [employeeId], references: [id])
  employeeId String?

  @@index([status])
  @@index([dueDate])
}

model ActivityLog {
  id            String   @id @default(uuid())
  action        String
  meta          String?
  entity        String?
  entityType    String? // e.g. PROJECT, TASK, USER
  entityId      String? // related entity ID
  details       String?
  performedBy   User?    @relation("performedByUser", fields: [performedById], references: [id])
  performedById String?
  createdAt     DateTime @default(now())

  user   User?   @relation(fields: [userId], references: [id])
  userId String?

  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?

  task   Task?   @relation(fields: [taskId], references: [id])
  taskId String?
}

model Employee {
  id           String     @id @default(uuid())
  name         String
  email        String     @unique
  phone        String?
  role         String
  position     String?
  salary       Float?
  department   Department @relation(fields: [departmentId], references: [id])
  departmentId String
  tasks        Task[]     @relation("EmployeeTasks")
}

enum UserRole {
  ADMIN
  MANAGER
  EMPLOYEE
}

enum ProjectStatus {
  PLANNED
  IN_PROGRESS
  COMPLETED
  ON_HOLD
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}
