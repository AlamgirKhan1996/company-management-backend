datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(EMPLOYEE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  departments  Department[]  @relation("UserDepartments")
  projects     Project[]     @relation("UserProjects")
  tasks        Task[]        @relation("UserTasks")
  activityLogs ActivityLog[]
}

model Department {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy   User   @relation("UserDepartments", fields: [createdById], references: [id])
  createdById String

  projects Project[] @relation("DepartmentProjects")
}

model Project {
  id          String        @id @default(uuid())
  name        String
  description String?
  startDate   DateTime
  endDate     DateTime?
  status      ProjectStatus @default(PLANNED)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  departments Department[] @relation("DepartmentProjects")
  createdBy   User         @relation("UserProjects", fields: [createdById], references: [id])
  createdById String

  tasks        Task[]
  activityLogs ActivityLog[]
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      TaskStatus @default(TODO)
  dueDate     DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  project   Project @relation(fields: [projectId], references: [id])
  projectId String

  assignedTo   User?         @relation("UserTasks", fields: [assignedToId], references: [id])
  assignedToId String?
  activityLogs ActivityLog[]
}

model ActivityLog {
  id        String   @id @default(uuid())
  action    String
  meta      String?
  createdAt DateTime @default(now())

  user   User?   @relation(fields: [userId], references: [id])
  userId String?

  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?

  task   Task?   @relation(fields: [taskId], references: [id])
  taskId String?
}

enum UserRole {
  ADMIN
  MANAGER
  EMPLOYEE
}

enum ProjectStatus {
  PLANNED
  IN_PROGRESS
  COMPLETED
  ON_HOLD
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}
